<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/all_page_bg" >

        <Button
            android:id="@+id/reg1_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />

        <TextView
            style="@style/textview_title"
            android:text="账号注册" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/bg_edit1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/reg1_edit_mobile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@null"
                android:hint="手机号码"
                android:maxLength="11"
                android:paddingLeft="5.0dip"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/bg_edit1" >

            <EditText
                android:id="@+id/reg1_edit_smsCode"
                style="@style/editview_style"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/reg1_smsCode"
                android:inputType="phone"
                android:maxLength="6"
                android:paddingLeft="5.0dip" />

            <Button
                android:id="@+id/reg1_btn_getSmsCode"
                android:layout_width="fill_parent"
                android:layout_height="35.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_weight="2.0"
                android:background="@drawable/btn_no"
                android:enabled="true"
                android:gravity="bottom|center"
                android:minHeight="30.0dip"
                android:minWidth="60.0dip"
                android:text="获取验证码"
                android:textColor="@color/all_page_bg"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_contact_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="如果收不到短信，请联系客服：400-711-5170"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip" >

            <CheckBox
                android:id="@+id/reg1_checkbox_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/reg1_agree1"
                android:textColor="@color/black"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/reg1_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reg1_agree2"
                android:textColor="@color/blue"
                android:textSize="16.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/reg1_btn_next"
                android:layout_width="220dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/all_page_bg"
                android:enabled="true"
                android:text="@string/reg1_next_step"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>