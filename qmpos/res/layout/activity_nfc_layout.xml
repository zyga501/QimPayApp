<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/button_color" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/anzhuojiantou" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="NFC收款"
            android:textColor="@color/whilte"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            style="@style/layout_vertical"
            android:layout_weight="2"
            android:background="@drawable/select_calculator" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="金额"
                android:textColor="@color/title_text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:enabled="false"
                android:maxLength="10"
                android:numeric="integer"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/title_text"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/choose_bank"
            style="@style/layout_vertical"
            android:layout_weight="2"
            android:background="@drawable/select_calculator" >

            <TextView
                android:id="@+id/text_bankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/title_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_accpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_bankname"
                android:layout_alignBottom="@+id/text_bankname"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/text_bankname"
                android:textColor="@color/title_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_bankId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_accpname"
                android:layout_alignBottom="@+id/text_accpname"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/text_accpname"
                android:textColor="@color/title_text"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/text_bankId"
                android:src="@drawable/xialajiant" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/layout_vertical"
            android:layout_weight="1"
            android:background="@drawable/select_calculator" >

            <TextView
                android:id="@+id/text_t0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:textColor="@color/title_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_t0"
                android:layout_alignBottom="@+id/text_t0"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/text_t0"
                android:textColor="@color/title_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="1"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button2"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="4"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button3"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="7"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button4"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="·"
                android:textColor="@color/title_text"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button5"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="2"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button6"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="5"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button7"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="8"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button8"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="0"
                android:textColor="@color/title_text"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button9"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="3"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button10"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="6"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <Button
                android:id="@+id/button11"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="9"
                android:textColor="@color/title_text"
                android:textSize="35sp" />

            <ImageButton
                android:id="@+id/imageButton1"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:src="@drawable/caihao" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button12"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/rate_border"
                android:text="D+0"
                android:textColor="@color/title_text"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button13"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/select_calculator"
                android:text="T+1"
                android:textColor="@color/title_text"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/button14"
                style="@style/layout_vertical"
                android:layout_weight="2"
                android:src="@drawable/queren" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>