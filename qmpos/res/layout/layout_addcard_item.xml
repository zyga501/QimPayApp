<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/card_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/page_margin15"
        android:layout_marginRight="@dimen/page_margin15"
        android:layout_marginTop="@dimen/page_margin15"
        android:background="@drawable/bg_nongye" >

        <TextView
            android:id="@+id/tv_cardNo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/page_margin"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/whilte"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/page_margin"
            android:layout_marginRight="@dimen/page_margin15"
            android:layout_toRightOf="@+id/tv_cardNo"
            android:paddingBottom="5dp"
            android:textColor="@color/whilte"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/tv_card_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/page_margin15"
            android:layout_marginRight="@dimen/page_margin15"
            android:layout_toLeftOf="@+id/tv_card_name"
            android:paddingBottom="5dp"
            android:textColor="@color/whilte"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/tv_set_card_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/page_margin"
            android:paddingBottom="5dp"
            android:textColor="@color/whilte"
            android:textSize="@dimen/text_size14"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tv_card_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/page_margin15"
            android:paddingTop="@dimen/page_margin"
            android:src="@drawable/card_delete" />
    </RelativeLayout>

</LinearLayout>