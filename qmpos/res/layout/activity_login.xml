<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FDFDFD"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_rl"
        android:layout_width="fill_parent"
        android:layout_height="200dp" >

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_logo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/page_margin15"
            android:text="支付改变生活	   分享创造价值"
            android:textColor="@color/all_page_bg"
            android:textSize="@dimen/text_size16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="center_vertical"
        android:layout_margin="20.0dip"
        android:background="@drawable/hk_bg_list_selector"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/shurushoujihaoma" />

        <EditText
            android:id="@+id/login_edit_user_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@null"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:paddingLeft="5.0dip"
            android:phoneNumber="true"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="18.0sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_width_height"
        android:layout_marginRight="@dimen/margin_width_height"
        android:background="@drawable/hk_bg_list_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon_pass"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/mima" />

        <EditText
            android:id="@+id/login_edit_user_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/page_width_height"
            android:layout_marginRight="@dimen/page_width_height"
            android:layout_toRightOf="@+id/icon_pass"
            android:background="@null"
            android:hint="登录密码"
            android:paddingLeft="5.0dip"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="18.0sp" />

        <ImageView
            android:id="@+id/img_errorNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/page_width_height"
            android:layout_marginRight="@dimen/page_width_height"
            android:layout_toLeftOf="@+id/login_edit_user_pwd"
            android:src="@drawable/delete_gray"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:id="@+id/login_find_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dip"
            android:text="@string/login_find_pwd"
            android:textColor="#b3b4b8"
            android:textSize="16.0sp" />

        <CheckBox
            android:id="@+id/login_remember_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/login_find_pwd"
            android:layout_marginLeft="20.0dip"
            android:button="@drawable/check_box"
            android:checked="false"
            android:text="记住账号"
            android:textColor="#ffb3b4b8"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="20.0dip"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_width_height"
            android:layout_marginRight="@dimen/margin_width_height"
            android:background="@drawable/btn_bg_blue2orange"
            android:text="@string/login_btn_login_name"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp" >

            <Button
                android:id="@+id/login_btn_reg"
                android:layout_width="70dp"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bg_reg"
                android:text="@string/login_reg"
                android:textColor="@color/white"
                android:textSize="15.0sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="7*24小时客服：400-711-5170" />
    </RelativeLayout>

</LinearLayout>