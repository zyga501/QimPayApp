<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff3f3f3" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/all_page_bg" >

        <Button
            android:id="@+id/pwd_mng_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />

        <TextView
            style="@style/textview_title"
            android:text="密码管理" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:background="#fff4f4f4" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pwd_mng_login_pwd_modify"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/hk_bg_list_selector"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="10.0dip"
                android:text="更改登录密码"
                android:textColor="#ff5b5b5b"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/pwd_mng_trans_pwd_modify"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/hk_bg_list_selector"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="10.0dip"
                android:text="更改交易密码"
                android:textColor="#ff5b5b5b"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/pwd_mng_trans_pwd_find"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/hk_bg_list_selector"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="20.0dip"
                android:paddingRight="10.0dip"
                android:text="忘记交易密码"
                android:textColor="#ff5b5b5b"
                android:textSize="15.0sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>