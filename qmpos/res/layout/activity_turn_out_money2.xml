<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whilte"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/all_page_bg" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />

        <TextView
            style="@style/textview_title"
            android:text="转账" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_phone_recharge_select"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="25dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="收款人姓名" />

            <View
                style="@style/textview_line_edit"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="5.0dip"
                 
                />

            <TextView
                android:id="@+id/get_money_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="收款人手机" />

            <View
                style="@style/textview_line_edit"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="5.0dip"
                 />

            <TextView
                android:id="@+id/get_money_mobile"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="转 账 金 额 " />

            <View
                style="@style/textview_line_edit"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="5.0dip"
                 />

            <EditText
                android:id="@+id/edit_turn_out_money"
                style="@style/et_turnout_input_textview"
                android:layout_marginLeft="10.0dip"
                android:hint="请输入转账金额"
                android:numeric="decimal"
                android:maxLength="10"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="转 账 说 明 " />

            <View
                style="@style/textview_line_edit"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="5.0dip"
                 />

            <EditText
                android:id="@+id/edit_turn_out_remark"
                style="@style/et_turnout_input_textview"
                android:layout_marginLeft="10.0dip"
                android:hint="请输入转账说明" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="交 易 密 码 " />

            <View
                style="@style/textview_line_edit"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="5.0dip"
                 />

            <EditText
                android:id="@+id/edit_trading_pwd"
                style="@style/et_turnout_input_textview"
                android:layout_marginLeft="10.0dip"
                android:hint="请输入交易密码"
                android:numeric="integer"
                android:password="true" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_turn_out_money_submit"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@color/all_page_bg"
            android:enabled="true"
            android:text="确认转帐"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>