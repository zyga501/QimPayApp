<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/all_page_bg" >

        <TextView
            style="@style/textview_title"
            android:text="财富" />
    </RelativeLayout>

    <View
        android:id="@+id/v_unlie"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top"
        android:background="#3C6AA3" />

    <LinearLayout
        android:id="@+id/yue_fanyong_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_unlie"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/balance_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#40618C" >

            <ImageView
                android:id="@+id/balance"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/c_yue" />

            <TextView
                android:id="@+id/mobileTopUpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/balance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="余额"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size15" />

            <TextView
                android:id="@+id/main_t1_pay0_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobileTopUpLabel"
                android:layout_centerHorizontal="true"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size15" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#3C6AA3" />

        <RelativeLayout
            android:id="@+id/rebate_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#40618C" >

            <ImageView
                android:id="@+id/fanyong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/c_fanyong" />

            <TextView
                android:id="@+id/tv_fanyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fanyong"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="返佣"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size15" />

            <TextView
                android:id="@+id/main_t1_rate_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fanyong"
                android:layout_centerHorizontal="true"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size15" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#3C6AA3" />

        <RelativeLayout
            android:id="@+id/jifen_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#40618C" >

            <ImageView
                android:id="@+id/img_jifen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/c_jifen" />

            <TextView
                android:id="@+id/tv_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_jifen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="积分"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size15" />

            <TextView
                android:id="@+id/main_t1_jf_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_jifen"
                android:layout_centerHorizontal="true"
                android:textColor="@color/whilte"
                android:textSize="@dimen/text_size15" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/main_t4_sv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yue_fanyong_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/full"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/yue_fanyong_layout"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/weixint1_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_weixint1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_weixint1" />

                        <TextView
                            android:id="@+id/tv_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_weixint1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="微信T1"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/weixint0_layout"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_weixint0"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_weixint0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_weixint0"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="微信T0"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <FrameLayout
                            android:id="@+id/nfcsk_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_new" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <ImageView
                                    android:id="@+id/img_nfcsk"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="25dp"
                                    android:src="@drawable/c_nfcsk" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_nfcsk"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2dp"
                                    android:text="NFC收款"
                                    android:textColor="#959597"
                                    android:textSize="@dimen/text_size15" />
                            </RelativeLayout>
                        </FrameLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/zanshangfu_layout"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_zanshangfu"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_zanshangfu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_zanshangfu"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="攒善付收款"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/zhuanzhang_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_zhuanzhang"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_zhuanzhang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_zhuanzhang"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="转账"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/yiyuanxy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_yiyuanxy"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_yiyuanxy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_yiyuanxy"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="一元许愿"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/kawugl_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_kawugl"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_kawugl" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_kawugl"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="卡务管理"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <FrameLayout
                            android:id="@+id/jrchaoshi_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@drawable/icon_new" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <ImageView
                                    android:id="@+id/img_jinrongchangshi"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="25dp"
                                    android:src="@drawable/c_jinrongchangshi" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/img_jinrongchangshi"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="2dp"
                                    android:text="金融超市"
                                    android:textColor="#959597"
                                    android:textSize="@dimen/text_size15" />
                            </RelativeLayout>
                        </FrameLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/three"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/shangcheng_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_shangcheng"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_shangcheng" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_shangcheng"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="商城"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/wsxiaodai_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_wsxiaodai"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_wsxiaodai" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_wsxiaodai"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="网上小贷"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/xyktie_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_xyktie"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_xyktie" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_xyktie"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="信用卡提额"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/xyksq_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_xyksq"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_xyksq" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_xyksq"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="信用卡申请"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/four"
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/xykhaikuan_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_xykhaikuan"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_xykhaikuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_xykhaikuan"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="信用卡还款"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/quanlw_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_quanlw"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_quanlw" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_quanlw"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="圈里圈外"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fenrundk_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_fenrundk"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_fenrundk" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_fenrundk"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="分润贷款"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/liuliang_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/main_border2" >

                        <ImageView
                            android:id="@+id/img_liuliang"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/c_liuliang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_liuliang"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="4G流量卡"
                            android:textColor="#959597"
                            android:textSize="@dimen/text_size15" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal" >

                    <cn.qmpos.view.ImageCycleView
                        android:id="@+id/ad_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/transtantbg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>