<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/all_page_bg" >

        <Button
            android:id="@+id/find_trans_pwd1_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />

        <TextView
            style="@style/textview_title"
            android:text="找回密码 -- 获取验证码" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="手机号" />

            <View
                style="@style/textview_line_edit"
                android:layout_height="18dp"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="13.0dip" />

            <EditText
                android:id="@+id/find_trans_pwd1_edit_mobile"
                style="@style/et_input_textview"
                android:maxLength="11"
                android:enabled="false"
                android:layout_marginLeft="10.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/hk_bg_list_selector"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="验证码" />

            <View
                style="@style/textview_line_edit"
                android:layout_height="18dp"
                android:layout_marginBottom="2.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="13.0dip" />

            <EditText
                android:id="@+id/find_trans_pwd1_edit_smsCode"
                style="@style/et_input_textview"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/find_trans_pwd1_btn_getSmsCode"
                android:layout_width="80dp"
                android:layout_height="35.0dip"
                android:layout_marginRight="12.0dip"
                android:background="@drawable/btn_no"
                android:enabled="true"
                android:gravity="bottom|center"
                android:minHeight="30.0dip"
                android:minWidth="60.0dip"
                android:text="获取验证码"
                android:textColor="@color/all_page_bg"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/find_trans_pwd1_btn_next"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/all_page_bg"
                android:enabled="true"
                android:text="@string/reg1_next_step"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>